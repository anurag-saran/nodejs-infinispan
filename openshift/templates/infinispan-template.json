{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "annotations": {
      "iconClass": "icon-jboss",
      "description": "Application template for Node.js plus Infinispan",
      "tags": "datagrid,jboss,node.js,xpaas",
      "version": "1.2.0"
    },
    "name": "infinispan-nodejs"
  },
  "labels": {
    "template": "infinispan-nodejs",
    "xpaas": "1.2.0"
  },
  "objects": [
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "nodejs-infinispan"
      },
      "spec": {
        "source": {
          "type": "Git",
          "git": {
            "uri": "https://github.com/gustavonalle/nodejs-infinispan"
          }
        },
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "namespace": "openshift",
              "name": "nodejs:0.10"
            }
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "nodejs-infinispan:latest"
          }
        },
        "triggers": [
          {
            "type": "ImageChange"
          },
          {
            "type": "ConfigChange"
          },
          {
            "type": "GitHub",
            "github": {
              "secret": "${GITHUB_WEBHOOK_SECRET}"
            }
          },
          {
            "type": "Generic",
            "generic": {
              "secret": "${GENERIC_WEBHOOK_SECRET}"
            }
          }
        ]
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "nodejs-infinispan"
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "nodejs-infinispan",
        "labels": {
          "app": "nodejs-infinispan"
        }
      },
      "spec": {
        "strategy": {
          "type": "Rolling",
          "rollingParams": {
            "updatePeriodSeconds": 1,
            "intervalSeconds": 1,
            "timeoutSeconds": 600,
            "maxUnavailable": "25%",
            "maxSurge": "25%"
          },
          "resources": {}
        },
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "nodejs-infinispan"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "nodejs-infinispan:latest"
              }
            }
          }
        ],
        "replicas": 2,
        "selector": {
          "app": "nodejs-infinispan",
          "deploymentconfig": "nodejs-infinispan"
        },
        "template": {
          "metadata": {
            "labels": {
              "app": "nodejs-infinispan",
              "deploymentconfig": "nodejs-infinispan"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "nodejs-infinispan",
                "image": "nodejs-infinispan",
                "ports": [
                  {
                    "containerPort": 8080,
                    "protocol": "TCP"
                  }
                ],
                "resources": {},
                "imagePullPolicy": "Always"
              }
            ],
            "restartPolicy": "Always",
            "terminationGracePeriodSeconds": 30,
            "dnsPolicy": "ClusterFirst",
            "securityContext": {}
          }
        }
      },
      "status": {}
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "datagrid",
        "labels": {
          "application": "datagrid"
        }
      },
      "spec": {
        "strategy": {
          "type": "Rolling",
          "rollingParams": {
            "timeoutSeconds": 600,
            "maxSurge": "66%",
            "maxUnavailable": "10%"
          }
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "datagrid"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "namespace": "openshift",
                "name": "jboss-datagrid65-openshift:latest"
              }
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 5,
        "selector": {
          "deploymentConfig": "datagrid"
        },
        "template": {
          "metadata": {
            "name": "datagrid",
            "labels": {
              "deploymentConfig": "datagrid",
              "application": "datagrid"
            }
          },
          "spec": {
            "terminationGracePeriodSeconds": 60,
            "containers": [
              {
                "name": "datagrid",
                "image": "jboss/infinispan-server",
                "imagePullPolicy": "Always",
                "args" : ["cloud","-Djboss.default.jgroups.stack=kubernetes"],
                "ports": [
                  {
                    "name": "jolokia",
                    "containerPort": 8778,
                    "protocol": "TCP"
                  },
                  {
                    "name": "http",
                    "containerPort": 8080,
                    "protocol": "TCP"
                  },
                  {
                    "name": "ping",
                    "containerPort": 8888,
                    "protocol": "TCP"
                  },
                  {
                    "name": "hotrod",
                    "containerPort": 11222,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "OPENSHIFT_KUBE_PING_NAMESPACE",
                    "valueFrom": {
                      "fieldRef": {
                        "fieldPath": "metadata.namespace"
                      }
                    }
                  }
                ]
              }
            ]
          }
        }
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "spec": {
        "ports": [
          {
            "port": 11333,
            "targetPort": 11222
          }
        ],
        "selector": {
          "deploymentConfig": "datagrid"
        }
      },
      "metadata": {
        "name": "datagrid-hotrod",
        "labels": {
          "application": "datagrid"
        },
        "annotations": {
          "description": "Hot Rod service for clustered applications."
        }
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "nodejs-infinispan",
        "labels": {
          "app": "nodejs-infinispan"
        }
      },
      "spec": {
        "ports": [
          {
            "name": "8080-tcp",
            "protocol": "TCP",
            "port": 8080,
            "targetPort": 8080
          }
        ],
        "selector": {
          "app": "nodejs-infinispan",
          "deploymentconfig": "nodejs-infinispan"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
      },
      "status": {
        "loadBalancer": {}
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "nodejs-infinispan",
        "labels": {
          "app": "nodejs-infinispan"
        }
      },
      "spec": {
        "to": {
          "kind": "Service",
          "name": "nodejs-infinispan"
        },
        "port": {
          "targetPort": 8080
        }
      },
      "status": {}
    }
  ]
}
